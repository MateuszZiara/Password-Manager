@model List<Projekt_AB.Models.VaultItemViewModel>
@{
    ViewData["Title"] = "Mój Sejf";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mój Sejf</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">
        <i class="bi bi-plus-lg"></i> Dodaj Hasło
    </button>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="card-title text-primary">@item.ServiceName</h5>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć to hasło?');">
                            <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-trash"></i></button>
                        </form>
                    </div>
                    
                    <label class="small text-muted mt-2">Nazwa użytkownika</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control form-control-sm" value="@item.Username" readonly>
                        <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('@item.Username')"><i class="bi bi-clipboard"></i></button>
                    </div>

                    <label class="small text-muted">Hasło</label>
                    <div class="input-group">
                        <input type="password" class="form-control form-control-sm password-field" value="@item.Password" readonly>
                        <button class="btn btn-outline-secondary btn-sm" onclick="togglePassword(this)"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('@item.Password')"><i class="bi bi-clipboard"></i></button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Add" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Dodaj nowe hasło</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Serwis / Strona</label>
                        <input name="ServiceName" class="form-control" required placeholder="np. Netflix, Gmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nazwa użytkownika</label>
                        <input name="Username" class="form-control" required placeholder="Login lub Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hasło</label>
                        <div class="input-group">
                            <input name="Password" type="password" class="form-control" id="newPassword" required />
                            <button type="button" class="btn btn-outline-secondary" onclick="generatePassword()"><i class="bi bi-magic"></i> Generuj</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(btn) {
            const input = btn.previousElementSibling;
            const icon = btn.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = "password";
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                // Optional: Show toast
            });
        }

        function generatePassword() {
            const chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@@#$%^&*()_+";
            let password = "";
            for (let i = 0; i < 16; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            document.getElementById('newPassword').value = password;
            document.getElementById('newPassword').type = "text"; 
        }
    </script>
}
